<Window x:Class="WpfApplication_Zach.HomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication_Zach"
        mc:Ignorable="d"
        Title="HomeWindow" Height="450" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="/Home.jpg"/>
    </Window.Background>
    <Grid >
        <ListBox x:Name="listBox"
                 d:ItemsSource="{d:SampleData ItemCount=5}" 
                 Margin="0,0,622,0"
                 Padding="30" Background="#FF0E2763" FontSize="16"
                 />
        <ListView d:ItemsSource="{d:SampleData ItemCount=5}" 
                  Margin="232,59,195,59"
                  Padding="0,0,0,0"
                  Opacity=".7"
                  >
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="newButton" 
                Content="New" 
                HorizontalAlignment="Left" 
                Margin="630,37,0,0" 
                VerticalAlignment="Top" 
                Width="140" 
                Height="35" Click="newButton_Click"
                
        />
        <Button x:Name="edit" 
                Content="Edit" 
                HorizontalAlignment="Left" 
                Margin="630,77,0,0" 
                VerticalAlignment="Top" 
                Width="140" 
                Height="35" Click="edit_Click"
                
        />
        <Button x:Name="deleteButton" 
                Content="Delete" 
                HorizontalAlignment="Left" 
                Margin="630,117,0,0" 
                VerticalAlignment="Top" 
                Width="140" 
                Height="35" Click="deleteButton_Click"
                
        />
        <Button x:Name="exitButton" 
                Content="Exit" 
                HorizontalAlignment="Left" 
                Margin="630,372,0,0" 
                VerticalAlignment="Top" 
                Width="140" 
                Height="35" Click="exitButton_Click"
                
        />
    </Grid>
</Window>
